<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	versionCode="2"
	version 	= "1.0.2"
	id        = "com.mens.shoes">


	<name>Mens Shoes</name>

	<description>
		Mens Shoes At Discount Prices 
	</description>

	<author href="devverse@gmail.com"
		email="devverse@gmail.com">
		Mens Discount Shoes
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.4" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<preference name='phonegap-version' value='cli-5.2.0' />
	<preference name="fullscreen" value="true" />
	<preference name="auto-hide-splash-screen" value="false" />
	<preference name="target-device" value="universal" />
	<preference name="exit-on-suspend" value="false" />
	<preference name="android-build-tool" value="gradle" />

	<!-- General -->
	<icon src="icons/icon.png" width="72" height="72" />
	<icon src="icons/icon.png" width="48" height="48" />
	<icon src="icons/icon.png" width="36" height="36"  gap:role="default"  />

    <gap:splash src="splash.jpg" />
	<feature name="http://api.phonegap.com/1.0/network"/>
	<gap:plugin name="cordova-plugin-inappbrowser" source="npm" />
	<gap:plugin name="cordova-plugin-admob" source="npm" />
</widget>
